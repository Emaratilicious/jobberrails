!!! Strict
%html{html_attrs}
  %head
    %meta{"http-equiv" => "Content-type", "content" => "text/html; charset=utf-8"}
    
    = title :site => AppConfig.site_name
    = stylesheets
    = javascripts
  
    = feed_links
    
  %body
    #container
      = partial "layouts/admin_header"
      - if logged_in?
        #categories
          = partial "admin/categories/list"

      #content
        = yield
     
    #footer
    = render :partial => 'layouts/admin_flash_boxes'